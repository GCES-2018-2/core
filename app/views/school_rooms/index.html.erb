<% if permission[:level] == 1 %>
  <h1>Turmas - <%= courses_by_user.name %></h1>
<% else %>
  <h1>Turmas</h1>
<% end %>


<%= form_tag(filtering_params_path, method: :get) do %>
  <table class="table">
    <tr>
      <td>
        <%= label_tag(:discipline_selected, "Disciplina") %>
        <%= text_field_tag(:discipline_selected,"", {:class => 'select-filter', :placeholder =>'Digite a disciplina aqui'}) %>
      </td>
      <td >
        <%= label_tag(:allocation_selected, "Alocação") %>
        <%= select_tag(:allocation_selected, options_for_select([[:prompt => true],  ['Alocadas', "Alocadas"], ['Desalocadas', "Desalocadas"]]), {:class => 'select-filter'})  %>
      </td>
      <td >
        <%= submit_tag "Filtrar", name: nil, class:'btn btn-primary pull-right button-filter' %> 
      </td>  
      <td> 
        <% if permission[:level] == 1 %>
          <%= link_to "Criar Nova Turma", school_rooms_new_path, class: "btn btn-primary pull-right button-new", role: "button" %>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>





<% if @my_school_rooms.count == 0 %>
  <h3>Não há turmas cadastradas no momento.</h3>
<% else %>
  <div>
    <table class="table rooms">
      <thead>
        <tr>
          <th>Disciplina</th>
          <th>Turma</th>
          <th>Cursos</th>
          <th>Nº de Vagas</th>
          <th></th>
        </tr>
      </thead>
      <tbody>

        <%= will_paginate @my_school_rooms, renderer: BootstrapPagination::Rails %>

        <% @my_school_rooms.each do |school_room| %>
          <tr>
            <td><%= school_room.discipline.name %></td>
            <td><%= school_room.name %></td>
            <td>
              <% school_room.courses.each do |course| %>
                <%= course.name %> <br>
              <% end %>
            </td>
            <td><%= school_room.vacancies %></td>
            <td>
              <% if permission[:level] == 1 %>
                <div class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fas fa-ellipsis-v icon"></i>
                  </a>
                  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
                    <li>
                      <% if !allocated? school_room.id %>
                        <%= link_to allocations_new_path(school_room.id), :id => 'Icon alloc' do %>
                          Alocar
                        <% end %>
                      <% else %>
                        <%= link_to allocations_destroy_path(school_room.id), :id => 'Icon alloc' do %>
                          Desalocar
                        <% end %>
                      <% end %>
                    </li>
                    <li class="divider"></li>
                    <li>
                      <% if !allocated? school_room.id %>
                        <%= link_to allocation_period_path(school_room.id) do %>
                          Solicitar Alocação
                        <% end %>
                      <% else %>
                        <%= link_to school_rooms_index_path do %>
                          Solicitar Desalocação
                        <% end %>
                      <% end %>
                    </li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to school_rooms_edit_path(school_room.id), :id => 'Icon edit' do %>
                        Alterar
                      <% end %>
                    </li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to destroy_school_room_path(school_room.id),
                                  data: {confirm: "Esta ação não poderá mais ser desfeita. Tem certeza que deseja continuar?"} do %>
                        Excluir
                      <% end %>
                    </li>
                  </ul>
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<%= will_paginate @my_school_rooms, renderer: BootstrapPagination::Rails %>
