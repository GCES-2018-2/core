<% unless @periods.count.zero?  %>
  <div class="row section-stive">
    <div class="calendary">
      <h2 class="calendary-text dash-text">CALENDÁRIO</h2>
      <h4 class="dash-text">Acompanhe o calendário acadêmico de alocação de salas</h4>
      <br> 
      <table class="period-table">
        <thead>
          <tr>
            <th class="period">
              <div>
                <%= image_tag("grade.png", :size => "260x150", :align => "center")%>
              </div>
              <div>
                <strong>Período de Alocação</strong>
                <br>
              </div>
            </th>
            <th class="period">
              <div>
                <%= image_tag("adjustment.png", :size => "260x150", :align => "center")%>
              </div>
              <div>
                <strong>Período de Ajuste</strong>
                <br>
              </div>
            </th>
            <th class="period">
              <div>
                <%= image_tag("period.png", :size => "260x150", :align => "center")%>
              </div>
              <div>
                <strong>Período letivo</strong>
                <br>
              </div>          
            </th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td class="period-description"><%=@periods.first.initial_date.strftime('%d/%m/%Y')%> à <%=@periods.first.final_date.strftime('%d/%m/%Y')%> </td>
              <td class="period-description"><%=@periods.second.initial_date.strftime('%d/%m/%Y')%> à <%=@periods.second.final_date.strftime('%d/%m/%Y')%> </td>
              <td class="period-description"><%=@periods.third.initial_date.strftime('%d/%m/%Y')%> à <%=@periods.third.final_date.strftime('%d/%m/%Y')%> </td>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
<% end %>

